@section('content')
<a href="/posts" class="btn btn-info mb-4">Back</a>


  <h1 class="text-center my-3">Edit post "{{ post.Title }}"</h1>

  <form action="{{ '/posts/' + post.id + '?_method=PUT' }}" method="post">
    {{ csrfField() }}
    <div class="form-group">
      <label for="title">Title</label>
      <input id="title" name="title" value="{{ post.Title }}" class="form-control">

      {{ elIf('<span class="text-danger">$self</span>', getErrorFor('title'), hasErrorFor('title')) }}

    </div>


    <div class="form-group">
      <label for="content">Content</label>
      <textarea id="content" name="content" class="form-control">{{ post.Content }}</textarea>

      {{ elIf('<span class="text-danger">$self</span>', getErrorFor('content'), hasErrorFor('content')) }}

    </div>

    <input type="submit" class="btn btn-success btn-block">

  </form>



@endsection
